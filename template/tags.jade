extends base
{% from "mixins" import make_posts_list %}
is_index = request.path.strip('/')=='tags'

block title
	| {{ "标签" if is_index else tags.join('+') }} | {{ site.title }}

block content
	if is_index
		ul.list_with_title
			for tag_name, tag_count in site.tags
				li.listing_title
					a(href="/tags/{{tag_name}}")= tag_name
					| ({{tag_count}})
	else
		#posts
			+set_per_page(10)
			+make_posts_list()



